@using Microsoft.AspNetCore.Routing
@{
  var route = ViewContext.View.Path;

  String isActive(String item)
  {
    if (item.Equals("home") && route.Contains("Product"))
    {
      return "active";
    }
    else if(item.Equals("provider") && route.Contains("Provider"))
    {
      return "active";
    }
    else if(item.Equals("home") && !route.Contains("Provider"))
    {
      return "active";
    }
    return "";
  }
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.titulo</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css"/>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Simple SQL CRUD APP</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link @isActive("home")" asp-controller="Home" asp-action="Index">Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link @isActive("provider")" asp-controller="Provider" asp-action="Index">Providers</a>
      </li>
      <!--li class="nav-item">
        <a class="nav-link disabled" href="#">Disabled</a>
      </li>-->
    </ul>
  </div>
</nav>
@RenderBody();
</body>
</html>
<script src="js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts",required:false)
