@model List<Product>

<table class="table table-dark">
    <thead>
    <th colspan="4"></th>
    <th class="d-flex flex-row justify-content-center">
        <button type="button" class="btn btn-success">
            <a href="/product" style="text-decoration: none;color: white">Add new Product</a>
        </button>
    </th>
    </thead>
    <thead>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Price</th>
        <th>Provider</th>
        <th>Action</th>
    </tr>
    </thead>
    @foreach (Product producto in @Model)
    {
        <tr>
            <td>@producto.id</td>
            <td>@producto.title</td>
            <td>@String.Format("{0:0.00}", producto.price)</td>
            <td>@producto.ProviderId</td>
            <td><a asp-controller="market" asp-action="ProductForm" asp-route-id="@producto.id"> See product</a></td>
        </tr>
    }
</table>